@model ElBasset.DTO.DTO.DepartmentDTO

@{
    ViewData["Title"] = "Edit";
}
<div style="padding-top:150px;text-align:right;" class="container">

<h1>تعديل </h1>

<h4>القسم</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group p-1" style="display:none">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group p-1">
                <label class="control-label">اسم القسم</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="حفظ " class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-primary">العودة</a>
            </div>
        </form>
    </div>
</div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
