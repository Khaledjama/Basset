@model ElBasset.DTO.DTO.DepartmentDTO

@{
    ViewData["Title"] = "Create";
}
<div style="padding-top:150px;text-align:right;" class="container">

<h1>أنشاء</h1>

<h4>قسم جديد</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group p-1">
                <label class="control-label"> اسم القسم</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="أنشاء" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">العودة</a>
            </div>
        </form>
    </div>
</div>

</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
}
