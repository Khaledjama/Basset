@model List<ElBasset.DataBase.ApplicationUser>
@{
    int RoleNumber = 0;
}
<div style="padding-top:150px;text-align:right;" class="container">

<h1>الطلاب </h1>
<div class="d-flex justify-content-start">
    <div style="width:50%">
        <form asp-action="Filter" method="post">
            <h3>البحث عن طريق القسم</h3>
            <div class="d-flex justify-content-start">
                <div class="form-group p-1" style="width:50%">
                    <select name="DepartmentId" class="form-control"
                            asp-items="@(new SelectList(@ViewBag.AllDepartment,"Id","Name"))"></select>
                </div>
                <div class="form-group p-1">
                    <input type="submit" value="بحث " class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
    <div style="width:50%">
        <h3>البحث عن طالب  </h3>
        <form asp-action="FilterStudent" method="post">
            <div class="d-flex justify-content-start">
                <div class="form-group p-1" style="width:50%">
                    <select name="DepartmentId" class="form-control"
                            asp-items="@(new SelectList(@ViewBag.AllDepartment,"Id","Name"))"></select>
                </div>
                <div class="form-group p-1" style="width:50%">
                    <input name="Name" class="form-control" />

                </div>
                <div class="form-group p-1">
                    <input type="submit" value="بحث " class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>
</div>
<div>
</div>
<div class="container" style="text-align:right">
<p>
    <a asp-action="Register" class="btn btn-primary">انشاء مستخدم جديد</a>
</p>
<div class="table-responsive" style="font-size:14px">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        الرقم التعريفي
                    </th>
                    <th>اسم المستخدم </th>
                    <th>الايميل </th>
                    <th>العنوان </th>
                    <th>رقم التليفون </th>
                    <th>القسم </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @RoleNumber
                            @{
                                RoleNumber++;
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                            @Html.DisplayFor(modelItem => item.MiddleName)
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Adress)</td>
                        <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                        <td>@Html.DisplayFor(modelItem => item.Department.Name)</td>
                        <td>
                            <a class="btn btn-success" asp-action="ResetPassword" asp-route-Id="@item.Id">إعادة تعيين كلمة السر </a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-Id="@item.Id">حذف </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

</div>
</div>