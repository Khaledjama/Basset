@model List<ElBasset.DTO.DTO.ExamDTO>
@{
    int RoleNumber = 0;
}
<div class="container" style="padding-top:150px;text-align:right">
    <h1>الامتحانات </h1>
    <div class="d-flex justify-content-start">
        <div style="width:50%" class="m-1">
            <form method="post" asp-action="Filter">
                <h3>البحث عن طريق القسم</h3>
                <div class="d-flex justify-content-start">
                    <div class="form-group p-1" style="width:50%">
                        <select name="DepartmentId" class="form-control"
                                asp-items="@(new SelectList(@ViewBag.AllDepartment,"Id","Name"))"></select>
                    </div>
                    <div class="form-group p-1">
                        <input type="submit" value="بحث" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div>
</div>
<div class="container" style="text-align:right">
    <p>
        <a asp-action="Create" class="btn btn-primary">انشاء امتحان جديد</a>
    </p>
    <div class="table-responsive" style="font-size:13px;">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        الرقم التعريفي
                    </th>
                    <th>اسم الامتحان </th>
                    <th>نوع الامتحان </th>
                    <th>اللينك </th>
                    <th>بداية الامتحان </th>
                    <th>نهاية الامتحان  </th>
                    <th>القسم </th>
                    <th>الحالة</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @RoleNumber
                            @{
                                RoleNumber++;
                            }
                        </td>
                        <td> @Html.DisplayFor(modelItem => item.ExamName)</td>
                        <td> @Html.DisplayFor(modelItem => item.ExamType.ExamTypeName)</td>
                        <td> <a target="_blank" href="@item.ExamLink" class="btn btn-primary">Open Exam</a> </td>
                        <td>@Html.DisplayFor(modelItem => item.StartDateTimeExam)</td>
                        <td>@Html.DisplayFor(modelItem => item.EndDateTimeExam)</td>
                        <td>@Html.DisplayFor(modelItem => item.Department.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Statues)</td>
                        <td>
                            <a class="btn btn-success" asp-action="Edit" asp-route-Id="@item.Id">تعديل</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-Id="@item.Id">حذف </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

</div>
</div>
