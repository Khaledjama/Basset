@model ElBasset.DTO.DTO.RoleVM
<div style="padding-top:150px;text-align:right;" class="container">

<h1>انشاء دور جديد </h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateRole" method="post">
            <div class="form-group">
                <label class="control-label">اسم الدور</label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="RoleId" class="control-label"></label>
                <input asp-for="RoleId" disabled class="form-control" />
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="انشاء" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
