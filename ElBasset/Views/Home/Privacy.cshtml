@model ElBasset.DTO.DTO.ApplicationUserDTO
@{
    string Name =string.Empty;
}

<style>
    body {
        color: #1a202c;
        text-align: left;
        background-color: #e2e8f0;
    }

    .main-body {
        padding: 15px;
    }

    .card {
        box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
    }

    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid rgba(0,0,0,.125);
        border-radius: .25rem;
    }

    .card-body {
        flex: 1 1 auto;
        min-height: 1px;
        padding: 1rem;
    }

    .gutters-sm {
        margin-right: -8px;
        margin-left: -8px;
    }

        .gutters-sm > .col, .gutters-sm > [class*=col-] {
            padding-right: 8px;
            padding-left: 8px;
        }

    .mb-3, .my-3 {
        margin-bottom: 1rem !important;
    }

    .bg-gray-300 {
        background-color: #e2e8f0;
    }

    .h-100 {
        height: 100% !important;
    }

    .shadow-none {
        box-shadow: none !important;
    }
</style>
<div class="container" style="padding-top:150px;text-align:right;">
    @if (TempData["RessetPasswod"] != null)
    {
        Name = TempData["RessetPasswod"] as string;
        TempData["token"] = Name;
    }
    @if(ViewBag.Result != null)
    {
        <div class="alert alert-success" id="alert">
            <strong>رسالة تاكيد</strong> @ViewBag.Result
        </div>

    }
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            @if (Model.ImagePath == null)
                            {
                                <img src="~/SecondTemplate/Academic-Master/images/avatar.png" alt="Admin" class="rounded-circle" width="150">
                            }else{
                                <img src="~/Files/Images/@Model.ImagePath" alt="Admin" class="rounded-circle" width="150">
                            }
                            <div class="mt-3">
                                <h4>الاسم @Model.FirstName @Model.MiddleName @Model.LastName</h4>
                                <p class="text-secondary mb-1">اسم المستخدم :@Model.UserName </p>
                                <p class="text-muted font-size-sm">العنوان @Model.Adress</p>
                            <br />
                                <form asp-action="RessetPassword" method="get">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <input type="submit" value="تغيير كلمة امرور" class="btn btn-primary" />
                                            <input type="button" accept="image/*" class="btn btn-primary" onclick="Changing()" id="Photo" value="تغيير الصورة ">

                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mt-3">
                </div>
                @if (!string.IsNullOrEmpty(Name))
                {
                    <div class="card">
                        <div class="card-body">
                            <form asp-action="Resset" asp-controller="Home" method="post">

                                <div class="row">
                                    
                                    <div class="col-sm-9 text-secondary">
                                        <input type="password" name="CurrentPassword" placeholder="كلمة المرور الحالية" class="form-control" />
                                    </div>
                                </div>
                                <hr />
                                <div class="row">
                                   
                                    <div class="col-sm-9 text-secondary">
                                        <input type="password" name="newPassword" id="newPassword" placeholder="كلمة المرور الجديدة" class="form-control" />
                                    </div>
                                </div>
                                <hr />
                                <div class="row">
                                    <div class="col-sm-9 text-secondary">
                                        <input type="password" name="confirmNewPassword" id="confirmNewPassword" placeholder="تأكيد  كلمة المرور " class="form-control" />
                                        <span id="message"></span>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <input type="button" id="ChangePass" value="حفظ" class="btn btn-primary" />
                                        <input type="button" id="Close" value="اغلاق" class="btn btn-primary" />
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>
                }
                <div class="card mt-3">
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">الاسم الاول</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.FirstName 
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">الاسم الثاني</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.MiddleName
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">الاسم الاخير</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.LastName
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">الايميل</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Email
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">رقم التليفون</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                               @Model.PhoneNumber
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">العنوان</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                               @Model.Adress
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-12">
                                <a class="btn btn-primary" id="Changebtn" >تعديل</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-3" id="CardChange">
                    <div class="card-body">
                        <form asp-action="ChangeMyProfile" method="post">

                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">الاسم الاول</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                    <input type="text" asp-for="FirstName" class="form-control" />
                            </div>
                        </div>
                        <hr />
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">الاسم الثاني</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" asp-for="MiddleName" class="form-control" />
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">الاسم الاخير</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" asp-for="LastName" class="form-control" />
                                </div>
                            </div>
                            <hr>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">رقم التليفون</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" asp-for="PhoneNumber" class="form-control" />
                                </div>
                            </div>
                            <hr>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">العنوان</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" asp-for="Adress" class="form-control" />
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-12">
                                    <input type="submit" value="حفظ" class="btn btn-primary" />
                                    <input type="button" id="Close" value="اغلاق" class="btn btn-primary" />
                                </div>
                            </div>
                       </form>
                    </div>
                </div>
                </div>



            </div>
        </div>

    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    $(document).ready(function () {

        //document.getElementById("token").style.display = "";

        var Message="";

        $("#alert").fadeToggle(5000)
        $("#CardChange").fadeOut();
        $("#Changebtn").click(function () {
            $("#CardChange").fadeToggle("slow");
        });

        $("#Photo").click(function () {
            document.getElementById("Photo").type = "file";
            $('#Photo').on('change', function () {

                var Ffile = $("#Photo").val();
                var upld = Ffile.split('.').pop();
                if (!(upld === 'png' || upld === 'jpeg' || upld === 'jpg' || upld === 'jfif' || upld === 'pjpeg' || upld === 'pjpeg' || upld === 'pjp')) 
                {
                    alert("من فضلك ارفع صورة بشكل صحيح")
                    $("#Photo").val('');
                    location.reload();
                }

                var myFile = ($('#Photo')[0].files[0].size) / 1024;
                
                var myFileSize = (Math.round((myFile / 1024) * 100) / 100);
                if (myFileSize > 5) {
                    alert("حجم الصورة كبير جدا يجب ان يكون الحجم اقل من 5 ميجا ")
                    location.reload();
                }
                else {
                    var formData = new FormData();
                    formData.append("Photo", $("#Photo")[0].files[0]);
                    $.ajax({
                        url: '/api/Users/ChangeProtofile',
                        type: 'POST',
                        data: formData,
                        cache: false,
                        contentType: false,
                        processData: false,
                        success: function (fileName) {
                            alert("تم اضافة تعديل بنجاح")
                            location.reload();
                        },
                        error: function (jqXhr, textStatus, errorMessage) { // error callback
                            alert("هناك خطأ حدث اثناء رفع الصورة");
                            location.reload();
                        },
                    });
                }
            });
           
        });

        $("#Close").on('click', function () {
            $("#CardChange").fadeOut();
        });
        $('#newPassword, #confirmNewPassword').on('keyup', function () {
            if ($('#newPassword').val() == $('#confirmNewPassword').val()) {
                $('#message').html('كلمة المرور متطابقة').css('color', 'green');
            } else
                $('#message').html('كلمة المرور غير متطابقة').css('color', 'red');
        });
        $("#ChangePass").on('click', function () {
            var NewPassword = $("#newPassword").val();
            var ConfirmNewPassword = $("#confirmNewPassword").val();
            if(NewPassword== ConfirmNewPassword){
                document.getElementById("ChangePass").type = "submit";
            }else{
                alert("يجب ان تكون كلمة السر متطابقة")
                document.getElementById("ChangePass").type = "button";
            }

        });
    });
</script>